{
  "compilerOptions": {
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "jsx": "react",
    "baseUrl": "src",
    "paths": {
      "@public/*": ["./../public/*"],
      "@components/*": ["components/*"],
      "@config/*": ["config/*"],
      "@types/*": ["types/*"],
    }
  },
  "include": ["src"]
}
